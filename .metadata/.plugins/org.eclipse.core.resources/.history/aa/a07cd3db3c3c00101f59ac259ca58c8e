package SeleniumDay01Basics;

import java.io.IOException;
import java.net.HttpURLConnection;
import java.net.MalformedURLException;
import java.net.URL;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.edge.EdgeOptions;

public class WebPageLinks {

	public static void main(String[] args) {

		EdgeOptions option = new EdgeOptions().addArguments("--headless");
		EdgeDriver driver = new EdgeDriver(option);
		driver.get("https://www.google.com");

		List<WebElement> allLinks = driver.findElements(By.tagName("a"));
		int totalLinks = allLinks.size();
		System.out.println(totalLinks);

//		WebElement firstLink = allLinks.get(0);
//		String firstUrl = firstLink.getDomAttribute("href");
//		System.out.println(firstUrl);

//		if (totalLinks >= 5) {
//			WebElement sixthLink = allLinks.get(5);
//			String sixthUrl = sixthLink.getDomAttribute("href");
//			System.out.println("6th Link is : " + sixthUrl);
//		}

		for (int i = 0; i <= totalLinks - 1; i++) {

			try {
				String link = allLinks.get(i).getDomAttribute("href");
				URL url = new URL(link);
				HttpURLConnection connect = (HttpURLConnection) url.openConnection();
				int responseCode = connect.getResponseCode();
				String responseMessage = connect.getResponseMessage();
				if (responseCode == 200) {
					System.out.println("Valid Link  : " + responseCode + ", Message : " + responseMessage);
					System.out.println("Valid Link  : " + url);
				}else {
					System.out.println("Invalid Link  : "+url);
				}

			} catch (MalformedURLException e) {
				e.printStackTrace();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

}
